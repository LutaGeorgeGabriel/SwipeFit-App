<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attv="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="1dp">

        <ImageView
            android:id="@+id/user_screen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:src="@drawable/user_screen"/>

        <com.dragankrstic.autotypetextview.AutoTypeTextView
            android:paddingTop="20dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/user_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            attv:animateTextTypeWithoutMistakes="User Data" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/userlogged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="User Logged in with the following email:"/>

        <com.dragankrstic.autotypetextview.AutoTypeTextView
            android:id="@+id/userEmail"
            android:layout_centerInParent="true"
            android:layout_below="@id/userlogged"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="italic"
            attv:typingSpeed="30"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <info.hoang8f.widget.FButton
            android:layout_centerInParent="true"
            android:id="@+id/logout"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="left|bottom"
            android:layout_margin="10dp"
            android:minHeight="50dp"
            android:minWidth="140dp"
            android:text="LOG OUT"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/fbutton_color_alizarin"
            fbutton:shadowEnabled="true" />

    </RelativeLayout>

</LinearLayout>