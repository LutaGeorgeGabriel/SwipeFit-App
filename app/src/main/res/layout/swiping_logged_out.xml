<RelativeLayout android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.swipefit.application.app.swiping.SwipingActivity"
    xmlns:attv="http://schemas.android.com/apk/res-auto">

    <com.dragankrstic.autotypetextview.AutoTypeTextView
        android:paddingTop="20dp"
        android:layout_centerInParent="true"
        android:id="@+id/lblTextWithoutMistakes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        attv:typingSpeed="30"
        attv:animateTextTypeWithoutMistakes="Please login first" />
</RelativeLayout>
